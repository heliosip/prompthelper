{
    "manifest_version": 3,
    "name": "AI Prompt Helper",
    "version": "1.0",
    "description": "Template-based prompt management for AI chat tools",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://claude.ai/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"]
    }],
    "background": {
      "service_worker": "background.js"
    }
  }