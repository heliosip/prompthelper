{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "experimentalDecorators": true,
    
    // Modules
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"],
      "types/*": ["types/*"],
      "assets/*": ["assets/*"]
    },
    
    // JavaScript Support
    "allowJs": true,
    "checkJs": false,
    
    // Emit
    "outDir": "./dist",
    "noEmit": true,
    "sourceMap": true,
    "declaration": false,
    "isolatedModules": true,
    
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    
    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    // Completeness
    "skipLibCheck": true,
    "resolveJsonModule": true,
    
    // Types
    "types": [
      "vite/client",
      "node",
      "chrome",
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "scripts/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}